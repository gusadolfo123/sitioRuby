            <%= form_for :tarea, url: tarea_path(@tarea), method: :patch do |f| %>
                <% if @tarea.errors.any? %>
                    <div class="form-group row">
                        <div id="error_explanation">
                            <h2>
                                <%= pluralize(@tarea.errors.count, "error") %>
                            </h2>
                            <ul>
                                <% @tarea.errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                <% end %>
                
                <div class="form-group row">
                    <%= f.label :titulo, "Titulo", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_field :titulo, class: "form-control" %>
                    </div>
                </div>

               <div class="form-group row">
                    <%= f.label :descripcion, "Descripcion", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :descripcion, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.submit 'Editar', class: "btn btn-sm btn-success" %>
                </div>            

            <% end %>
                
                <%= link_to 'Volver', tareas_path %>

