            <%= form_for :tarea, url: tareas_path do |f| %> 
                <% if @tarea.errors.any? %>
                    <div class="form-group row">
                        <div id="error_explanation">
                            <h2>
                                <%= pluralize(@tarea.errors.count, "error") %>
                            </h2>
                            <ul>
                                <% @tarea.errors.full_messages.each do |msg| %>
                                    <li><p class="alert alert-danger"> <%= msg %> </p></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                <% end %>
                
                <div class="form-group row">
                    <%= f.label :titulo, "Titulo", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_field :titulo, class: "form-control", required: true %>
                    </div>
                </div>

               <div class="form-group row">
                    <%= f.label :descripcion, "Descripcion", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :descripcion, class: "form-control", required: true %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.submit 'Guardar', class: "btn btn-sm btn-success" %>
                </div>            

            <% end %>
                
                <%= link_to 'Volver', tareas_path %>

        </div>
